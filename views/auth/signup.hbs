<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/auth/auth-style.css">
    <scriptÂ src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

</head>


<body>
    <nav>
    <h1><a href="/">DevSpace</a></h1>
    <ul>
      {{#if user}}
      
        <li>Welcome, {{user.email}}</li>
        <li><a href="/logout">Log out</a></li>
      {{else}}
        <li><a href="/user/login">Log in</a></li>
        <li><a href="/user/signup" class="btn">Sign up</a></li>
      {{/if}}
    </ul>
    
    </nav>
    <div class="container">

         {{#if password_cpassword}}
          <h4 class="alert">{{password_cpassword}}</h4>
         {{/if}}
         {{#if not_register}}
          <h4 class="alert">{{not_register}}</h4>
         {{/if}} 
         {{#if signup_issue}}
          <h4 class="alert">{{signup_issue}}</h4>
         {{/if}}
         {{#if user_exist}}
          <h4 class="alert">{{user_exist}}</h4>
         {{/if}}
         {{#if prn_exist}}
          <h4 class="alert">{{prn_exist}}</h4>
         {{/if}}  
         {{#if empty_credentials}}
          <h4 class="alert">{{empty_credentials}}</h4>
         {{/if}}

        <form method="POST">
        <h2>Register</h2>
        <label for="name">Name</label>
        <input type="text" required = true name="name">
        <label for="email">Email</label>
        <input type="text" name="email">
        <label for="PRN">PRN</label>
        <input type="text" name="PRN">
        <label for="password">Password</label>
        <input type="password" name="password"><br>
        <label for="password2">Confirm Password</label>
        <input type="password" name="password2"><br>
        <input type="submit" class="submit" id="submit">
        </form> 
        
    </div>
    
    </div>  

</body>
</html>